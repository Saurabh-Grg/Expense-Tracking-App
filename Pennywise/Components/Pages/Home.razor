@page "/"
@using Pennywise.Components.Layout
@layout MainLayout
@inject NavigationManager Navigator

<body>
    <div class="container">
        <div class="app-name">Pennywise</div>
        <div class="app-slogan">Because every transaction counts.</div>
        <button @onclick="NavigateToLogin" class="login-button">Go to Login</button>
    </div>
</body>

@code {
    private void NavigateToLogin()
    {
        Navigator.NavigateTo("/login");
    }
}