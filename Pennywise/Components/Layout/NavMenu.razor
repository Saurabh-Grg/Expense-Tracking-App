@inherits LayoutComponentBase

<div class="sidebar">
    <div class="navbar navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Pennywise</a>
        </div>
    </div>

    <input type="checkbox" title="Navigation menu" class="navbar-toggler" id="nav-toggler" />

    <div class="nav-scrollable" onclick="document.querySelector('#nav-toggler').click()">
        <nav class="flex-column">
            <!-- Home -->
            <div class="nav-item">
                <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill"></span> Home
                </NavLink>
            </div>

            <!-- Dashboard -->
            <div class="nav-item">
                <NavLink class="nav-link" href="/dashboard">
                    <span class="bi bi-bar-chart-line-fill"></span> Dashboard
                </NavLink>
            </div>

            <!-- Transactions -->
            <div class="nav-item">
                <NavLink class="nav-link" href="/transactions">
                    <span class="bi bi-cash-stack"></span> Transactions
                </NavLink>
            </div>

            <!-- Debts -->
            <div class="nav-item">
                <NavLink class="nav-link" href="/debts">
                    <span class="bi bi-credit-card-2-back-fill"></span> Debts
                </NavLink>
            </div>

            <!-- Reports -->
            <div class="nav-item">
                <NavLink class="nav-link" href="/reports">
                    <span class="bi bi-clipboard-data"></span> Reports
                </NavLink>
            </div>

            <!-- Settings -->
            <div class="nav-item">
                <NavLink class="nav-link" href="/settings">
                    <span class="bi bi-gear-fill"></span> Settings
                </NavLink>
            </div>
        </nav>
    </div>
</div>

@Body
